{sub_dirs, [
        "apps/coffer_blobserver",
        "apps/coffer_common",
        "thirdparty/cowboy",
        "thirdparty/ranch",
        "thirdparty/jsx",
        "thirdparty/lager"
]}.

{require_otp_vsn, "R16|R17"}.

{erl_opts, [
        debug_info,
        warnings_as_errors,
        strict_validation,
        warn_bif_clash,
        warn_deprecated_function,
        warn_export_all,
        warn_export_vars,
        warn_exported_vars,
        warn_obsolete_guard,
        warn_shadow_vars,
        %warn_unused_import, % using proper's automatic imports
        warn_unused_function,
        warn_unused_record,
        warn_unused_vars]}.
